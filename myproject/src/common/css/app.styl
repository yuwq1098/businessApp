@import "./mixin.styl"

//---工具类样式
.nopadding
    padding 0!important
.nomargin
    margin 0!important

    
/* ==========================================================================
   功能（function）（.f-）工具类
   ========================================================================== */

//-1200px布局
.f__w1200
    width 1200px
    margin 0 auto
    position relative

//-清边距
.f__nopad
    padding 0!important
.f__nomag
    margin 0!important

//-清浮动
.f__clearfix
    *zoom 1
    &:after
        visibility hidden
        display block
        font-size 0 
        content ""
        clear both
        height 0
.f__fl
    float left
.f__fc
    float center
.f__fr
    float right
.f__cb
    clear both

//-清除间隙
.f__clearance
    font-size 0px
    letter-spacing -4px

//-显示与隐藏
.f__hide
    display none
.f__show
    display block

//文本对齐
.f__tal
    text-align left
.f__tac
    text-align center
.f__tar
    text-align right

//-溢出隐藏
.f__oh
    overflow hidden

//-文本粗细
.f__fwbd
    font-weight 700
.f__fwtn
    font-weight 400

//-定位
.f__pc,.f__pl,.f__pr,.f__pt,.f__pb
    position absolute
.f__pc
    left 0
    right 0
    margin 0 auto
.f__pl
    left 0
.f__pr
    right 0
.f__pt
    top 0
.f__pb
    bottom 0

//del样式
.f__del
    text-decoration line-through

//内联
.f__di
    display inline-block

body,html
    height 100%
    width 100%
//---网页样式主体
body
    _bgColor($c_white03)
    &.pure
        _bgColor($c_white)
#app,.G-page
    min-height 100%

.f__mt20
    margin-top .20rem
.f__mt25
    margin-top .25rem
.f__mb20
    margin-bottom .20rem
.f__mb25
    margin-bottom .25rem
.f__ml20
    margin-left .20rem
.f__ml25
    margin-left .25rem
.f__mr20
    margin-right .20rem
.f__mr25
    margin-right .25rem

input,textarea
    _placeholder()
    color $c_black

//页面
.G-page
    width 10rem
    position relative
    margin 0 auto
    _bgColor($c_white)
    &.transparent
        _bgColor(transparent)
    .G-input-rimless
        border: none
    .G-step-foot
        width 9rem
        _verticalLayout(0,0,auto,.35rem)
        .G-link-txt
            _display()
            _spacingPlus(1px)

//按钮
.G-btn
    border none
    _btnColor($c_green02,$c_white02,$c_green,$c_white02)
    &.G-btn-primary
        border none
        _btnColor($c_green02,$c_white02,$c_green,$c_white02)
    &.G-btn-hollow
        border 1px solid $c_white05
        _btnColor($c_white,$c_black02,$c_white02,$c_black02)
    &.G-btn-gray,&.G-btn-disabled
        background $c_gray
        color $c_black03
    &.G-btn-yellow
        background $c_yellow
    &.G-btn-full
        _display()
        width 100%
        height 1.05rem
        line-height 1.05rem
        text-align center
        font-size $f_medium
        _spacingPlus(.25rem)
        _borderRadius(.15rem)


//链接
.G-link-txt
    color $c_blue02
    font-size $f_normal
    &.actived,&:active
        color $c_blue
