//---颜色类输出
_colorFn(name,$color,fn=1,count=5)
    .txt-{name}01
        color $color
    for i in 2..count
        .txt-{name}0{i}
            if fn == 1
                color $color + (i - 1) * 8% + (i - 1) * .5deg
            else if fn == 2
                color $color + -((i - 1) * 8)% + -((i - 1) * .5)deg
            else if fn == 3
                color $color + -((i - 1) * 2.5)%
    .bg-{name}01
        background-color $color
    for i in 2..count
        .bg-{name}0{i}
            if fn == 1
                background-color $color + (i - 1) * 8% + (i - 1) * .5deg
            else if fn == 2
                background-color $color + -((i - 1) * 8)% + -((i - 1) * .5)deg
            else if fn == 3
                background-color $color + -((i - 1) * 2.5)%

//---颜色样式输出
_color(color)
    color color

//---背景颜色样式输出
_bgColor(bg=$c_white)
    background-color bg

//---显示方式
_display(arg=block)
    display arg

//---隐藏
_box__hide()
    display none

//---显示
_box__show()
    display block

//---边框线
_boder(direction,color=$c_white03,pixel=1px)
    border-{direction} pixel solid color

//---严格盒模型
_boxSizing(fn=1)
    if fn == 1
        -webkit-box-sizing content-box
        box-sizing content-box
    else if fn == 2
        -webkit-box-sizing content-box
        box-sizing content-box

//图片大小控制(被容器填充)
_imgwrap(node=imgwrap)
    .{node}
        img
            width 100%
            height 100%

//---字体间隔
_spacing(pixel=1px)
    letter-spacing pixel

//---字体间隔升级版
_spacingPlus(pixel=1px)
    letter-spacing pixel
    text-indent pixel

//---圆角
_borderRadius(pixel=50%)
    -webkit-border-radius pixel
    -moz-border-radius pixel
    border-radius pixel

//---线性渐变
_gradient(bColor,eColor)
    background -webkit-linear-gradient(left top, bColor, eColor)
    background -o-linear-gradient(bottom right, bColor, eColor)
    background -moz-linear-gradient(bottom right, bColor, eColor)
    background linear-gradient(to bottom right, bColor, eColor)



