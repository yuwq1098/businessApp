@import "../../common/css/mixin.styl"

.m-info-ipt
	padding 0 .25rem
	_boxSizing()
	.m-ipt-line
		width 100%
		height 1rem
		line-height 1rem
		position relative
		padding-left 3rem
		margin-top .15rem
		font-size 13px
		_boxSizing()
		_border(bottom,#e2e2e2)
		.u-tit
			position absolute
			left 0
			width 2.5rem
			text-align right
			line-height 1rem
			&.vital::before
				content "*"
				color #f43
				margin-right 2px
		.u-ipt
			border none
			height .8rem
			width 100%
	.m-upload-box
		margin-top .20rem
		width 100%
		position relative
		padding-left 3rem
		_boxSizing()
		font-size 13px
		.u-tit
			position absolute
			left 0
			width 2.5rem
			text-align right
			line-height 1rem
		.m-upload
			width 100%
			padding .15rem 0
			.u-pic-box
				width 2.5rem
				height 2.5rem
				border 1px dashed #e2e2e2
				position relative
				.u-add
					width .85rem
					height .85rem
					_completeCenter(,,.5rem,auto)
					
				.u-txt
					margin-top 1.6rem
					height .7rem
					_spacingPlus()
					color #959595
					line-height .7rem
					text-align center
			
	.bind-user
		_display()
		height 1.05rem
		line-height 1.05rem
		text-align center
		_borderRadius(4px)
		margin .5rem 0 0
		_spacingPlus(3px)
		font-size 16px
		&.m-btn-gray
			background #e2e2e2
			color #545454
		&.m-btn-fill
			background $c_green
			color #f4f4f4
	#gotoLogin
		line-height 1rem
		color $c_blue02
		font-size $f_normal
		&.actived,&:active
			color $c_blue

	
		