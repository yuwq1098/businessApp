@import "../../common/css/mixin.styl"

.G-page
    background transparent
    .m-tb-group
    	_border(top,#e2e2e2)
    	_border(bottom,#e2e2e2)
    	background #fafafa
    	color #545454
    	_boxSizing()
    	padding 0 .3rem
    	&.f__mt20
    		margin-top .20rem
    	.m-gp-box
        	width 100%
        	height 36px
        	line-height 36px
        	font-size 14px
        	position relative
        	_boxSizing()
        	padding-left 84px
        	.u-tit
        		width 66px
        		_display()
        		position absolute
        		left 0
        		top 0
        		text-align right
        	.u-con
        		position relative
        		.iconfont
        			position absolute
        			right 0
        			color $c_green
        	&:not(:last-child)::after
            	content ""
            	_display()
            	width 100%
            	height 1px
            	background #ededed
            	position absolute
            	bottom 0
            	left 0
            	z-index 999
            	

    .m-shd
    	height 32px
    	line-height 32px
    	font-size 12px
    	color #777
    	padding 0 .3rem
    	font-weight normal
    
    .m-list-box
    	_border(top,#e2e2e2)
    	_border(bottom,#e2e2e2)
    	background #fafafa
    	.clue-list
    		.u-item
    			.u-lk
    			    width @width
    			    _boxSizing()
    			    padding .1rem .3rem
    			    _display()
    			    color $c_black03
        			position relative
        			.u_tit
        				font-size 15px
        				_spacingPlus(1px)
        				line-height 22px
        				margin-bottom 4px
        			.u_time
        				font-size 13px
        				line-height 18px
        				color #959595
        		&:not(:last-child)
        			_border(bottom,#ededed)